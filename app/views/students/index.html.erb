<center><marquee width="100%" direction="left" height="50px" bgcolor="cyan" behavior="alternate" scrollamount="15"> 
Listing the Students Records
</marquee>
</center>
<%= link_to 'New Student', new_student_path%>
<table border = '5px', align = 'center'>
    <thead>
    <tr colspan = '5px'>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Email</th>
        <th colspan = '5px'>Actions</th>
    </tr>
    </thead>
    <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.first_name%></td>
            <td><%= student.last_name%></td>
            <td><%= student.email%></td>
            <td><%= link_to 'View',student%></td>
            <td><%= link_to 'Edit',edit_student_path(student)%></td>
            <td><%= link_to 'Delete', student, method: :delete, data: { 
                turbo_method: :delete,
                turbo_confirm: 'Are you sure with the deletion ?'}%></td>
          </tr>
        <% end %>
    </tbody>
</table>